<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10" style="-fx-background-color: #f9f9f9; -fx-padding: 20;" fx:controller="com.example.JavaFx.SalleController">
    <Label text="Salle Registration" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;" GridPane.columnSpan="2" GridPane.halignment="CENTER"/>

    <Label text="Le nom de la salle :" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-size: 14px;"/>
    <TextField fx:id="salleNameField" promptText="Entrer le nom de salle" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-font-size: 14px; -fx-pref-width: 250px;"/>

    <Label text="Capacite:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-size: 14px;"/>
    <TextField fx:id="CapaciteField" promptText="Entrer la capacite de la salle" GridPane.rowIndex="3" GridPane.columnIndex="1" style="-fx-font-size: 14px; -fx-pref-width: 250px;"/>


    <!-- Register Button -->
    <Button text="Register" onAction="#handleRegister" GridPane.rowIndex="6" GridPane.columnIndex="1" GridPane.halignment="RIGHT" style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 5 20; -fx-cursor: hand;"/>
</GridPane>
